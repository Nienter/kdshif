<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/edit_menu_bg" android:layout_width="match_parent" android:layout_height="130dp">
    <include layout="@layout/menu_tab_bar"/>
    <RelativeLayout android:id="@+id/frame_blur_toolbar" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="26dp">
        <TextView android:textSize="16sp" android:textColor="@color/bg_blur_font" android:gravity="center" android:layout_gravity="center" android:id="@+id/frame_blur_txt" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/edit_bg_blur"/>
        <SeekBar android:id="@+id/frame_blur_seekbar" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:maxHeight="4dp" android:layout_toRightOf="@+id/frame_blur_txt"/>
    </RelativeLayout>
    <include android:id="@+id/color_picker_id" layout="@layout/color_picker_control"/>
    <include android:id="@+id/gradient_picker_id" layout="@layout/color_picker_control"/>
</LinearLayout>
