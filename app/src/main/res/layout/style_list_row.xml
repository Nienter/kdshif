<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mt_font_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/style_list_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/style_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:paddingLeft="@dimen/picker_style_head_padding"
            android:paddingTop="@dimen/picker_style_top_padding"
            android:paddingRight="@dimen/picker_style_head_padding" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp" />
</LinearLayout>
