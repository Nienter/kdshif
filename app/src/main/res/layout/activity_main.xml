<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/main_photo_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mt_font_color"
                android:divider="@color/mt_font_color"
                android:dividerHeight="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_topbar_txt"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mt_color"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/mt_font_color"
            android:textSize="28sp" />
    </LinearLayout>
</RelativeLayout>
