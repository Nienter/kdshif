<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/edit_top_scrollviw" android:fitsSystemWindows="true" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:background="@color/edit_panel_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="vertical" android:id="@+id/edit_content_view" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/edit_title_bar" android:background="@color/edit_top_bar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
                <ImageView android:id="@+id/edit_title_back" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="24dp" android:src="@mipmap/edit_back" android:cropToPadding="true" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@string/back"/>
                <TextView android:textSize="18sp" android:textColor="@color/edit_title_color" android:gravity="center" android:id="@+id/edit_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/edit_topbar_txt" android:layout_toRightOf="@+id/edit_title_back" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="15sp" android:textColor="@color/mt_font_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_title_save" android:background="@drawable/bg_edit_round_corner" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/edit_done" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/edit_ad_panel" android:background="@color/edit_panel_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/edit_title_bar">
                <com.google.android.gms.ads.AdView android:id="@+id/ad_view" android:layout_width="match_parent" android:layout_height="wrap_content" ads:adSize="SMART_BANNER" ads:adUnitId="@string/banner_id"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/edit_scrollbar" android:layout_below="@+id/edit_ad_panel">
                <RelativeLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/frame_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.snaperfect.style.daguerre.widget.CanvasLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/collage_canvas" android:background="@color/edit_panel_bg" android:layout_width="match_parent" android:layout_height="360dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/edit_effect_frame" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
            <HorizontalScrollView android:layout_gravity="bottom" android:id="@+id/edit_scrollbar" android:background="@color/edit_menu_bg" android:saveEnabled="false" android:layout_width="match_parent" android:layout_height="60dp" android:fillViewport="true" android:layout_alignParentBottom="true">
                <LinearLayout android:orientation="horizontal" android:id="@+id/edit_toolbar" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="5">
                    <RelativeLayout android:id="@+id/edit_toolbar_style" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onStyleButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_style_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_style" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_style" android:layout_below="@+id/edit_toolbar_style_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/edit_toolbar_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onBackgroundButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_bg_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_bg" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_bg" android:layout_below="@+id/edit_toolbar_bg_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/edit_toolbar_filter" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onFilterButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_filter_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_filter" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_filter" android:layout_below="@+id/edit_toolbar_filter_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/edit_toolbar_crop" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onCropButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_crop_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_crop" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_crop" android:layout_below="@+id/edit_toolbar_crop_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/edit_toolbar_text" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onTextButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_text_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_text" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_text" android:layout_below="@+id/edit_toolbar_text_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/edit_toolbar_retouch" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:onClick="onRetouchButtonClick">
                        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/edit_toolbar_retouch_img" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="8dp" android:src="@mipmap/edit_icon_retouch" android:layout_centerHorizontal="true"/>
                        <TextView android:textSize="11sp" android:textColor="@color/edit_bar_font" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="14dp" android:text="@string/edit_toolbar_retouch" android:layout_below="@+id/edit_toolbar_retouch_img" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
